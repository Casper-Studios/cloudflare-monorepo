{
  "name": "cf-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "turbo run db:generate",
    "db:studio": "cd packages/db && bun run db:studio",
    "db:copy-migrations": "rm -rf apps/server/migrations && cp -r packages/db/drizzle apps/server/migrations",
    "db:migrate:local": "bun run db:copy-migrations && cd apps/server && wrangler d1 migrations apply my-database --local",
    "db:migrate:remote": "bun run db:copy-migrations && cd apps/server && wrangler d1 migrations apply my-database --remote",
    "db:list": "cd apps/server && wrangler d1 migrations list my-database --local"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "dependencies": {
    "better-auth": "^1.3.34",
    "zod": "^4.1.12"
  }
}
