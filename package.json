{
  "name": "{{projectName}}-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:workflows": "cd apps/workflows && wrangler dev --port 8788",
    "dev:server": "cd apps/server && wrangler dev --port 8787",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd packages/db && bun run db:generate",
    "db:studio": "cd packages/db && bun run db:studio",
    "ui-add": "turbo run ui-add"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "dependencies": {
    "better-auth": "^1.3.34",
    "drizzle-orm": "^0.44.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^4.1.12"
  }
}
