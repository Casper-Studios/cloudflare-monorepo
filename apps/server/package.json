{
  "name": "server",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "cf-typegen": "wrangler types",
    "deploy": "bun run build && wrangler deploy",
    "dev": "bun run db:migrate:local && react-router dev --port 3000",
    "postinstall": "npm run cf-typegen",
    "preview": "bun run build && vite preview",
    "typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
    "typegen": "wrangler types && react-router typegen",
    "auth:generate": "bunx --bun @better-auth/cli generate --config auth.config.ts",
    "setup": "bun run scripts/first-time-setup.ts",
    "db:migrate:local": "wrangler d1 migrations apply {{dbName}} --local",
    "db:migrate:remote": "wrangler d1 migrations apply {{dbName}} --remote"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@repo/auth": "workspace:*",
    "@repo/db": "workspace:*",
    "@repo/repositories": "workspace:*",
    "@repo/schemas": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/trpc": "workspace:*",
    "@repo/ui": "workspace:*",
    "@tabler/icons-react": "^3.35.0",
    "@tailwindcss/vite": "^4.1.16",
    "@tanstack/react-query": "^5.90.7",
    "@tanstack/react-table": "^8.21.3",
    "@trpc/client": "^11.7.1",
    "@trpc/react-query": "^11.7.1",
    "@trpc/server": "^11.7.1",
    "isbot": "^5.1.31",
    "react-hook-form": "^7.66.0",
    "react-router": "^7.9.2",
    "recharts": "2.15.4",
    "sonner": "^2.0.7",
    "superjson": "^2.2.5",
    "tailwindcss": "^4.1.16",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.5",
    "@cloudflare/workers-types": "^4.20251014.0",
    "@react-router/dev": "^7.9.2",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.10.0",
    "drizzle-kit": "^0.31.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.45.3"
  }
}
