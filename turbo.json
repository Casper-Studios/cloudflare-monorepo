{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["db:migrate:local"]
    },
    "db:migrate:local": {
      "dependsOn": ["db:copy-migrations", "^db:migrate:local"]
    },
    "db:copy-migrations": {
      "dependsOn": ["^db:copy-migrations"]
    }
  }
}
